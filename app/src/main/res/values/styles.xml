<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/btn_alertdialog</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:background">@drawable/alertdialog_background</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:textColorHighlight">@color/colorAccent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>

    </style>
    <!--Success Alert Dialog styles-->
    <style name="AppCompatAlertDialogStyleSuccess" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#FFCC00</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:background">@drawable/alertdialog_background_success</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowAnimationStyle">@style/AlertDialogAnimation</item>
    </style>
    <!--Alert Dialog Animations-->
    <style name="AlertDialogAnimation" >
        <item name="android:windowEnterAnimation" >@anim/bounce_interpolator</item>
        <item name="android:windowExitAnimation">@anim/alert_out</item>
    </style>

    <!--Failed Alert Dialog styles-->
    <style name="AppCompatAlertDialogStyleFailed" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#FFCC00</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:background">@drawable/alertdialog_background_failed</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowAnimationStyle">@style/AlertDialogAnimation</item>
    </style>


</resources>
